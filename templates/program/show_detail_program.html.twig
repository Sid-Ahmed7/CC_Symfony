{% extends 'base.html.twig' %}

{% block title %}Détails du programme{% endblock %}

{% block content %}
<section class="max-w-screen-lg mx-auto my-12 p-8 space-y-16 bg-gray-50 rounded-lg">

    <div class="text-center">
        <h1 class="text-5xl font-extrabold text-gray-800">{{ program.name }}</h1>
        <p class="text-lg text-gray-600 mt-4">{{ program.description }}</p>
    </div>

    <div class="mt-12 flex justify-center">
        <img src="{{ program.coverImage }}" alt="{{ program.name }}" class="w-3/4 h-[400px] object-cover rounded-lg shadow-md">
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mt-16 text-gray-700">
        <div class="text-center">
            <h3 class="font-bold text-lg text-blue-500">Coach</h3>
            <p class="mt-2">{{ program.coach.firstName }} {{ program.coach.lastName }}</p>
        </div>
        <div class="text-center">
            <h3 class="font-bold text-lg text-blue-500">Durée</h3>
            <p class="mt-2">{{ program.startDate|date('d M Y') }} - {{ program.endDate|date('d M Y') }}</p>
        </div>
        <div class="text-center">
            <h3 class="font-bold text-lg text-blue-500">Difficulté</h3>
            <p class="mt-2 capitalize">{{ program.difficulty.value }}</p>
        </div>
        <div class="text-center">
            <h3 class="font-bold text-lg text-blue-500">Prix</h3>
            <p class="mt-2">{{ program.price }} €</p>
        </div>
    </div>


    <div class="mt-16">
        <h3 class="text-3xl font-bold text-gray-800 text-center">Catégories</h3>
        <div class="mt-8 flex flex-wrap justify-center gap-4">
            {% for category in program.categories %}
                <span class="bg-blue-200 text-blue-800 px-6 py-2 rounded-full text-sm font-medium">{{ category.name }}</span>
            {% endfor %}
        </div>
    </div>

    <div class="mt-16 bg-white p-8 rounded-lg shadow-md">
        <h3 class="text-3xl font-bold text-gray-800 text-center">Avis</h3>
        <div class="mt-8 space-y-6">
            {% for review in program.reviews %}
                <div class="p-6 border border-gray-300 rounded-lg">
                    <p class="font-bold text-lg text-gray-800">{{ review.author.firstName }} {{ review.author.lastName }}</p>
                    <p class="text-gray-600 mt-2">{{ review.comment }}</p>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="mt-16 flex justify-center">
        {% if isChosen %}
            <p class="text-xl font-bold text-green-600">Vous avez déjà choisi ce programme.</p>
        {% else %}
            <form action="{{ path('app_program_add', {'id': program.id}) }}" method="POST">
                <button type="submit" class="bg-blue-500 text-white py-3 px-8 rounded-full hover:bg-blue-600 transition duration-300">
                    Ajouter ce programme
                </button>
            </form>
        {% endif %}
    </div>

</section>
{% endblock %}
