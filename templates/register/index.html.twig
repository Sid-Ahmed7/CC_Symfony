{% extends 'base_auth.html.twig' %}

{% block title %}Inscription Utilisateur{% endblock %}

{% block content %}
  <div class="container mx-auto py-12">
    <h1 class="text-3xl font-bold text-center mb-6">Inscription Utilisateur</h1>

    <form class="w-full max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-lg" method="post">
      
      {{ form_start(form) }}

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
        <div>
          {{ form_row(form.firstName, {
              'attr': {
                  'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500'
              }
          }) }}
        </div>

        <div>
          {{ form_row(form.lastName, {
              'attr': {
                  'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500'
              }
          }) }}
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
        <div>
          {{ form_row(form.email, {
              'attr': {
                  'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500'
              }
          }) }}
        </div>

        <div>
          {{ form_row(form.password, {
              'attr': {
                  'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500'
              }
          }) }}
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
        <div>
          {{ form_row(form.birthDate, {
              'attr': {
                  'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500'
              }
          }) }}
        </div>

        <div>
          {{ form_row(form.weight, {
              'attr': {
                  'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500'
              }
          }) }}
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
        <div>
          {{ form_row(form.height, {
              'attr': {
                  'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500'
              }
          }) }}
        </div>
      </div>

      <button
        class="w-full bg-indigo-500 text-white font-bold py-3 rounded-md hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-300"
        type="submit">S'inscrire</button>

      {{ form_end(form) }}
    </form>
  </div>
{% endblock %}
