{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block content %}
  <div class="container mx-auto py-12">
    <h1 class="text-3xl font-bold text-center mb-6">Mon Profil</h1>

    <div class="w-full max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-lg">
      <div class="mb-6 text-center">
        <img src="{{ user.profilePicture }}" alt="Profile Picture" class="rounded-full w-32 h-32 mx-auto mb-4">
        <h2 class="text-2xl font-semibold">{{ user.firstName }} {{ user.lastName }}</h2>
        <p class="text-lg text-gray-600">{{ user.email }}</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div>
          <strong class="block text-gray-700">Date de naissance</strong>
          <p>{{ user.birthDate|date('d-m-Y') }}</p>
        </div>

        <div>
          <strong class="block text-gray-700">Poids</strong>
          <p>{{ user.weight }} kg</p>
        </div>

        <div>
          <strong class="block text-gray-700">Taille</strong>
          <p>{{ user.height }} cm</p>
        </div>
      </div>

      <div class="mt-6">
        <a href="{{ path('app_edit_user_profile') }}" class="text-indigo-500 hover:text-indigo-600 font-semibold">
          Modifier mon profil
        </a>
      </div>
    </div>
  </div>
{% endblock %}
