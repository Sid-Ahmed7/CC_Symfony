{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur l'Application Coaching Pro{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-8">
        <!-- Section de bienvenue -->
        <section class="welcome-section mb-12 text-center">
            <h1 class="text-4xl font-extrabold text-gray-800 mb-4">Bienvenue sur Coaching Pro!</h1>
            <p class="text-xl text-gray-600">La meilleure application pour trouver des coachs qualifiés et des programmes sur mesure.</p>
        </section>


        <!-- Section des programmes -->
        <section class="programs-section mb-12">
            <h2 class="text-3xl font-bold text-center mb-8 text-blue-600">Les programmes les mieux notés</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                {% for program in programs %}
                    <div class="program bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
                        <!-- Image de couverture -->
                        <div class="relative rounded-lg overflow-hidden">
                            <img src="{{ program.coverImage }}" alt="Image de couverture" class="w-full h-40 object-cover rounded-t-lg">
                        </div>
                        <div class="mt-4">
                            <h3 class="text-xl font-semibold text-gray-800">{{ program.name }}</h3>
                            <p class="text-gray-600 mt-2">{{ program.description }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>

        <!-- Section des coachs -->
        <section class="coaches-section mb-12">
            <h2 class="text-3xl font-bold text-center mb-8 text-green-600">Nos Coachs</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                {% for coach in coaches %}
                    <div class="coach bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
                        <!-- Card Profile -->
                        <div class="flex items-center space-x-4">
                            <!-- Image de profil -->
                            <img src="{{ coach.profilePicture }}" alt="Image de profil" class="w-16 h-16 rounded-full border-2 border-gray-300">
                            <div>
                                <h3 class="text-xl font-semibold text-gray-800">{{ coach.firstName }} {{ coach.lastName }}</h3>
                                <p class="text-gray-600 mt-2">{{ coach.bio }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    </div>
{% endblock %}
