{% extends 'base.html.twig' %}

{% block title %}Sessions for {{ program.name }}{% endblock %}

{% block content %}
    <h1 class="text-3xl font-semibold text-center text-gray-800 mb-8">Sessions for {{ program.name }}</h1>

    <!-- Affichage des sessions sous forme de liste -->
    {% if sessions|length > 0 %}
        <form method="post">
            <div class="space-y-4">
                <ul>
                    {% for session in sessions %}
                        <li class="bg-white p-4 border border-gray-200 rounded-lg shadow-md hover:bg-gray-50">
                            <div class="flex justify-between items-center">
                                <div>
                                    <strong class="text-xl text-gray-800">{{ session.title }}</strong>
                                    <p class="text-sm text-gray-600">{{ session.date|date('d/m/Y H:i') }}</p>
                                </div>

                                <!-- Bouton pour ajouter la session -->
                                <button 
                                    type="submit" 
                                    name="session_id" 
                                    value="{{ session.id }}"
                                    class="bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                                    Ajouter cette session
                                </button>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </form>
    {% else %}
        <p class="text-gray-600">Aucune session disponible pour ce programme.</p>
    {% endif %}
{% endblock %}
