{% extends 'base.html.twig' %}

{% block title %}Mon Profil de Coach{% endblock %}

{% block content %}
  <div class="container mx-auto py-12">
    <div class="w-full max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-lg space-y-8">

      <div class="text-center">
        <img src="{{ coach.profilePicture }}" alt="Profile Picture" class="rounded-full w-36 h-36 mx-auto mb-4 object-cover border-4 border-indigo-600">
        <h2 class="text-3xl font-semibold text-gray-800">{{ coach.firstName }} {{ coach.lastName }}</h2>
        <p class="text-lg text-gray-500 mb-4">{{ coach.email }}</p>
      </div>

      <div class="mb-6">
        <strong class="text-lg text-gray-700">À propos de moi</strong>
        <p class="text-xl text-gray-600 mt-2">
          {% if coach.bio %}
            {{ coach.bio }}
          {% else %}
            Aucune bio renseignée.
          {% endif %}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div>
          <strong class="text-lg text-gray-700">Numéro de téléphone</strong>
          <p class="text-xl text-gray-600">{{ coach.phone ? coach.phone : 'Non renseigné' }}</p>
        </div>

        <div>
          <strong class="text-lg text-gray-700">Spécialités</strong>
          <p class="text-xl text-gray-600">
            {% if coach.specialities is empty %}
              Aucune spécialité renseignée
            {% else %}
              {% for speciality in coach.specialities %}
                <span class="text-indigo-600">{{ speciality.name }}</span>{% if not loop.last %}, {% endif %}
              {% endfor %}
            {% endif %}
          </p>
        </div>
      </div>

      <div class="text-center">
        <a href="{{ path('app_edit_coach_profile') }}" class="text-indigo-500 hover:text-indigo-600 font-semibold text-lg">
          Modifier mon profil
        </a>
      </div>

    </div>
  </div>
{% endblock %}
